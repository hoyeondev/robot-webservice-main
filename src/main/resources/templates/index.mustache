{{>layout/header}}

<h1 class="text-center">🤖 로봇 관리 시스템</h1>
<div class="container">
    <div class="row justify-content-center mb-3">
        <div class="col-md-8 text-center">
            <a href="/posts/save" role="button" class="btn btn-primary">
                <i class="fas fa-plus"></i> 로봇 등록
            </a>
            {{#userName}}
                <span class="ms-3">관리자: <span id="user" class="badge bg-info">{{userName}}</span></span>
                <a href="/logout" class="btn btn-outline-secondary ms-2" role="button">로그아웃</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success ms-2" role="button">
                    <i class="fab fa-google"></i> Google 로그인
                </a>
                <a href="/oauth2/authorization/naver" class="btn btn-warning ms-2" role="button">
                    <i class="fas fa-n"></i> Naver 로그인
                </a>
            {{/userName}}
        </div>
    </div>
</div>

<!-- 로봇 목록 출력 영역 -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">등록된 로봇 목록</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
            <tr>
                <th scope="col">로봇 ID</th>
                <th scope="col">로봇명</th>
                <th scope="col">모델</th>
                <th scope="col">상태</th>
                <th scope="col">등록자</th>
                <th scope="col">최종수정일</th>
                <th scope="col">관리</th>
            </tr>
            </thead>
            <tbody id="tbody">
            <!-- robots라는 Lists를 순회합니다. -->
            {{#robots}}
                <tr>
                    <td><span class="badge bg-secondary">{{id}}</span></td>
                    <td>
                        <a href="/posts/update/{{id}}" class="text-decoration-none fw-bold">
                            {{name}}
                        </a>
                    </td>
                    <td>{{model}}</td>
                    <td>
                        {{#active}}
                            <span class="badge bg-success">활성</span>
                        {{/active}}
                        {{^active}}
                            <span class="badge bg-danger">비활성</span>
                        {{/active}}
                    </td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                    <td>
                        <a href="/posts/update/{{id}}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> 수정
                        </a>
                    </td>
                </tr>
            {{/posts}}
            {{^posts}}
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        등록된 로봇이 없습니다.
                    </td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>

{{>layout/footer}}